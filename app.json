{
  "expo": {
    "name": "ishikawa",
    "slug": "ishikawa",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      ["expo-image-picker", {
        "photosPermission": "写真を添付するためにフォトライブラリへのアクセスが必要です。"
      }]
    ],    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.inoue420.ishikawa",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
       "NSPhotoLibraryUsageDescription": "写真を添付するためにフォトライブラリへのアクセスが必要です。",
       "NSPhotoLibraryAddUsageDescription": "コメントに写真を添付・保存するために使用します。"        
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.inoue420.ishikawa"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "41caced6-d569-45ba-b05d-c7572b112645"
      }
    }
  }
}
